<UserControl x:Class="WpfApp1.Precios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FAFAFA">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TÍTULO -->
        <TextBlock Text="💰 PRECIO BOLSA DE AZÚCAR"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0 0 0 20"/>

        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- IZQUIERDA: Precio actual + input -->
            <StackPanel Grid.Column="0" Margin="0 0 20 0">

                <!-- Tarjeta -->
                <Border Background="#FFFDE7"
                        Padding="20"
                        CornerRadius="12"
                        BorderBrush="#FBC02D"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="📦 Precio actual"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#444"/>
                        <TextBlock x:Name="txtPrecioActual"
                                   FontSize="34"
                                   FontWeight="Bold"
                                   Foreground="#000"
                                   Margin="0 5 0 0"/>
                        <TextBlock x:Name="txtFechaVigencia"
                                   FontSize="13"
                                   Foreground="#757575"
                                   Margin="0 5 0 0"/>
                    </StackPanel>
                </Border>

                <!-- Input + botón -->
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0" VerticalAlignment="Center">
                    <TextBox x:Name="txtNuevoPrecio"
                             Width="120"
                             Height="34"
                             VerticalContentAlignment="Center"
                             ToolTip="Ingrese nuevo precio"
                             FontSize="14"
                             Text="7000"
                             BorderBrush="#ccc"
                             Padding="5"
                             Margin="0,0,10,0"/>
                    <Button Content="💾 ACTUALIZAR"
                            Width="130"
                            Height="34"
                            Background="#FFA000"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            Cursor="Hand"
                            Click="BtnActualizar_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="8"
                                                    BorderBrush="Transparent"
                                                    BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FB8C00"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Validación -->
                <TextBlock x:Name="lblErrorPrecio"
                           Text="Ingrese un valor numérico válido"
                           Foreground="Red"
                           FontSize="12"
                           Visibility="Collapsed"
                           Margin="0,10,0,0"/>
            </StackPanel>

            <!-- DERECHA: Historial -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="📈 HISTORIAL DE PRECIOS"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0 0 0 10"
                           Foreground="#2E3A57"/>

                <DataGrid x:Name="dgHistorial"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          VerticalAlignment="Top"
                          HorizontalAlignment="Stretch"
                          GridLinesVisibility="None"
                          RowBackground="White"
                          AlternatingRowBackground="#F9F9F9"
                          BorderThickness="0"
                          Background="White"
                          RowHeight="40"
                          FontSize="14"
                          Margin="0,10,0,0"
                          MaxHeight="300"
                          VerticalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="*" />
                        <DataGridTextColumn Header="Precio (ARS)" Binding="{Binding Precio}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
