<Window x:Class="WpfApp1.EditarMovimientoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/" 
        Title="Editar Movimiento" Height="320" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#F7F7F7">

    <Border CornerRadius="10" Padding="20" Background="White" BorderBrush="#DDD" BorderThickness="1" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Detalle -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Detalle:" FontWeight="Bold" VerticalAlignment="Center" Grid.Column="0" FontSize="14"/>
                <TextBox x:Name="txtDetalle" Grid.Column="1" Height="30" Padding="5" BorderBrush="#CCC" BorderThickness="1" Background="#FFF" FontSize="14"/>
            </Grid>

            <!-- Debe -->
            <Grid Margin="0,0,0,10" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Debe:" FontWeight="Bold" VerticalAlignment="Center" Grid.Column="0" FontSize="14"/>
                <TextBox x:Name="txtDebe" Grid.Column="1" Height="30" Padding="5" BorderBrush="#CCC" BorderThickness="1" Background="#FFF" FontSize="14"/>
            </Grid>

            <!-- Haber -->
            <Grid Margin="0,0,0,10" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Haber:" FontWeight="Bold" VerticalAlignment="Center" Grid.Column="0" FontSize="14"/>
                <TextBox x:Name="txtHaber" Grid.Column="1" Height="30" Padding="5" BorderBrush="#CCC" BorderThickness="1" Background="#FFF" FontSize="14"/>
            </Grid>

            <!-- Saldo -->
            <Grid Margin="0,0,0,15" Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Saldo:" FontWeight="Bold" VerticalAlignment="Center" Grid.Column="0" FontSize="14"/>
                <TextBox x:Name="txtSaldo" Grid.Column="1" Height="30" Padding="5" BorderBrush="#CCC" BorderThickness="1" Background="#FFF" IsReadOnly="True" FontSize="14"/>
            </Grid>

            <!-- Botones con iconos -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="120" Height="35" Margin="5" Click="BtnGuardar_Click" BorderThickness="0" Cursor="Hand">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#4CAF50" Offset="0"/>
                            <GradientStop Color="#388E3C" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <fa:ImageAwesome Icon="Save" Width="16" Height="16" Margin="0,0,5,0" Foreground="White"/>
                        <TextBlock Text="GUARDAR" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                    <Button.Effect>
                        <DropShadowEffect Color="#888" ShadowDepth="2" BlurRadius="4"/>
                    </Button.Effect>
                </Button>

                <Button Width="120" Height="35" Margin="5" Click="BtnCancelar_Click" BorderThickness="0" Cursor="Hand">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#9E9E9E" Offset="0"/>
                            <GradientStop Color="#616161" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <fa:ImageAwesome Icon="Times" Width="16" Height="16" Margin="0,0,5,0" Foreground="White"/>
                        <TextBlock Text="CANCELAR" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                    <Button.Effect>
                        <DropShadowEffect Color="#888" ShadowDepth="2" BlurRadius="4"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
