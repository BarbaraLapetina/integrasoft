<Window x:Class="WpfApp1.VentaParticularForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario venta particular" Height="550" Width="750"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Encabezado -->
            <RowDefinition Height="Auto"/>
            <!-- Formulario -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Botón Eliminar -->
            <RowDefinition Height="Auto"/>
            <!-- Total + Registrar -->
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <TextBlock Text="➕ NUEVA VENTA"
                   FontSize="22" FontWeight="Bold" Margin="0 0 0 20"/>

        <!-- Formulario de carga -->
        <StackPanel Grid.Row="1" Margin="0 0 0 10">
            <!-- Fila de Fecha -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="FECHA:" FontSize="16" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <TextBox x:Name="txtFecha" Height="30" Width="120" IsReadOnly="True" FontSize="16" />
            </StackPanel>

            <!-- Fila de Producto, Cantidad y Agregar -->
            <StackPanel Orientation="Horizontal" Height="40">
                <TextBlock Text="PRODUCTO:" VerticalAlignment="Center" Margin="0 0 5 0" FontSize="16"/>
                <ComboBox x:Name="cbProducto" Height="30" Width="200" DisplayMemberPath="Nombre" SelectedValuePath="ProductoID" Margin="0 0 15 0" FontSize="16"/>

                <TextBlock Text="CANTIDAD:" VerticalAlignment="Center" Margin="0 0 5 0" FontSize="16"/>
                <TextBox x:Name="txtCantidad" Height="30" Width="60" Margin="0 0 15 0" FontSize="16"/>

                <Button Content="➕ AGREGAR"
Width="120" Height="35"
Background="#28a745"
Foreground="White"
FontWeight="SemiBold"
FontSize="14"
Click="BtnAgregar_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Detalle -->
        <DataGrid x:Name="dgDetalle"
                  Grid.Row="2"
                  Margin="0 10 0 10"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  RowHeight="30"
                  FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Producto" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="100"/>
                <DataGridTextColumn Header="Precio Unitario" Binding="{Binding PrecioUnitario}" Width="120"/>
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botón Eliminar fila debajo del DataGrid -->
        <Button Grid.Row="3"
                Content="❌ ELIMINAR FILA"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"
                Width="200"
                Height="35"
                Background="#dc3545"
                Foreground="White"
                FontWeight="SemiBold"
                FontSize="14"
                Click="btnEliminar_Click"/>

        <!-- Total + Botón Registrar -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <TextBlock Text="TOTAL:" FontSize="18" FontWeight="Bold" Margin="0,0,80,0"/>
            <TextBlock x:Name="txtTotal" FontSize="18" FontWeight="Bold"/>

            <Button Content="📝 REGISTRAR VENTA"
 Width="180" Height="40"
 Background="#007bff"
 Foreground="White"
 FontWeight="Bold"
 FontSize="16"
                    Margin="30,0,0,0"
 Click="BtnRegistrarVenta_Click"/>
        </StackPanel>
    </Grid>
</Window>
