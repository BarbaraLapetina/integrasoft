<Window x:Class="WpfApp1.VentaClienteForm" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:fa="http://schemas.fontawesome.io/icons/" Title="Venta Cliente" Width="900" Height="700" Background="#f5f7fa">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- CABECERA -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                <fa:ImageAwesome Icon="ShoppingCart" Width="28" Height="28" Foreground="DarkBlue" Margin="0,0,10,0"/>
                <TextBlock Text="NUEVA VENTA" FontSize="24" FontWeight="Bold" Foreground="DarkBlue" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
        <!-- FORMULARIO -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- Fila 1 -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0,0,0,10">
                    <TextBlock Text="Seleccione el cliente:" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="cbClientes" Width="250" Height="30" FontSize="16" IsEditable="True" IsTextSearchEnabled="False" StaysOpenOnEdit="True" Margin="0,0,20,0" BorderBrush="#ccc" BorderThickness="1" Padding="4" Background="#fafafa" />
                    <TextBlock Text="Fecha:" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtFecha" Width="150" IsReadOnly="True" FontSize="16" Background="#fafafa" BorderBrush="#ccc" BorderThickness="1" Padding="4"/>
                </StackPanel>
                <!-- Fila 2 -->
                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Producto:" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="cbProductos" Width="200" Margin="0,0,20,0" FontSize="16" Background="#fafafa" BorderBrush="#ccc" BorderThickness="1" Padding="4"/>
                    <TextBlock Text="Precio:" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtPrecio" Width="80" Height="30" Margin="0,0,20,0" FontSize="16" Background="#fafafa" BorderBrush="#ccc" BorderThickness="1" Padding="4"/>
                    <TextBlock Text="Cantidad:" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtCantidad" Width="60" Height="30" FontSize="16" Background="#fafafa" BorderBrush="#ccc" BorderThickness="1" Padding="4"/>
                </StackPanel>
                <!-- Botón Agregar -->
                <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
                    <Button Content="➕ AGREGAR" Width="120" Height="35" Background="#28a745" Foreground="White" FontWeight="SemiBold" FontSize="14" Cursor="Hand" Click="btnAgregar_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="#888" ShadowDepth="2" BlurRadius="4"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <!-- DATAGRID DETALLES -->
        <DataGrid x:Name="dgDetalles" Grid.Row="2" AutoGenerateColumns="False" Margin="0,0,0,20" HeadersVisibility="Column" IsReadOnly="True" CanUserAddRows="False" RowHeight="30" FontSize="14" GridLinesVisibility="None" RowBackground="White" AlternatingRowBackground="#F9F9F9" ColumnHeaderHeight="35">
            <DataGrid.Resources>
                <!-- Encabezado claro -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#f5f5f5"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
                <!-- Filas modernas -->
                <Style TargetType="DataGridRow">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="AlternationIndex" Value="1">
                            <Setter Property="Background" Value="#F9F9F9"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#BBDEFB"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#2196F3"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Producto" Binding="{Binding Nombre}" Width="*" />
                <DataGridTextColumn Header="Precio Unitario" Binding="{Binding PrecioUnitario}" Width="100" />
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="100" />
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>
        <!-- TOTAL Y BOTÓN REGISTRAR -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                <TextBlock Text="TOTAL:" FontSize="22" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock x:Name="txtTotal" FontSize="22" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <!-- BOTÓN ELIMINAR -->
        <Button Content="❌ ELIMINAR FILA"
                Grid.Row="4"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"
                Width="200"
                Height="35"
                Background="#dc3545"
                Foreground="White"
                FontWeight="SemiBold"
                FontSize="14"
                Cursor="Hand"
                Click="btnEliminar_Click">
            <Button.Effect>
                <DropShadowEffect Color="#888" ShadowDepth="2" BlurRadius="4"/>
            </Button.Effect>
        </Button>

        <!-- BOTÓN REGISTRAR -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="4">
            <Button Content="📝 REGISTRAR VENTA" Width="230" Height="40"
                    Background="#007bff" Foreground="White" FontWeight="Bold" FontSize="20" Cursor="Hand" Click="BtnRegistrarVenta_Click">
                <Button.Effect>
                    <DropShadowEffect Color="#888" ShadowDepth="2" BlurRadius="4"/>
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
  
</Window>