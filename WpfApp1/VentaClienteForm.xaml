<Window x:Class="WpfApp1.VentaClienteForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f5f7fa">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="Auto"/>
            <!-- Formulario -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Total y Pagado -->
            <RowDefinition Height="Auto"/>
            <!-- Botón Registrar -->
        </Grid.RowDefinitions>

        <!-- Título con botón de historial -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,20">
            <TextBlock Text=" ➕ NUEVA VENTA"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#333"
                       VerticalAlignment="Center"
                       Margin="10,0"/>
        </DockPanel>

        <!-- Formulario -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Fila 1 -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                <TextBlock Text="CLIENTE:" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="cbClientes" Width="200" Margin="0,0,20,0" FontSize="16"/>
                <TextBlock Text="FECHA:" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="txtFecha" Width="150" IsReadOnly="True" FontSize="16"/>
            </StackPanel>

            <!-- Fila 2 -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                <TextBlock Text="PRODUCTO:" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="cbProductos" Width="200" Margin="0,0,20,0" FontSize="16"/>
                <TextBlock Text="CANTIDAD:" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="txtCantidad" Width="60" FontSize="16"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0">
                <Button Content="➕ AGREGAR"
            Width="120" Height="35"
            Background="#28a745"
            Foreground="White"
            FontWeight="SemiBold"
            FontSize="14"
            Click="btnAgregar_Click"/>

            </StackPanel>
        </Grid>

        <!-- Tabla de productos -->
        <DataGrid x:Name="dgDetalles"
          Grid.Row="2"
          AutoGenerateColumns="False"
          Margin="0,0,0,20"
          HeadersVisibility="Column"
          IsReadOnly="True"
          CanUserAddRows="False"
          RowHeight="30"
          FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Producto" Binding="{Binding Nombre}" Width="*" />
                <DataGridTextColumn Header="Precio Unitario" Binding="{Binding PrecioUnitario}" Width="100" />
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="100" />
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botón Eliminar -->
        <Button Content="❌ ELIMINAR FILA"
        Grid.Row="3"
        HorizontalAlignment="Left"
        Margin="0,0,0,10"
        Width="200"
        Height="35"
        Background="#dc3545"
        Foreground="White"
        FontWeight="SemiBold"
        FontSize="14"
        Click="btnEliminar_Click"/>

        <!-- Total, Checkbox y Botón Registrar en filas separadas -->
        <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Total y checkbox -->
                <RowDefinition Height="Auto"/>
                <!-- Botón -->
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Margin="0,0,20,0">
                    <TextBlock Text="TOTAL:" FontSize="18" FontWeight="Bold" Margin="0,0,80,0"/>
                    <TextBlock x:Name="txtTotal" FontSize="18" FontWeight="Bold"/>
                </StackPanel>

                <CheckBox x:Name="estaPagado" Content="PAGADA"
                  Grid.Column="2"
                  FontSize="16"
                  VerticalAlignment="Center"
                  Margin="0,0,20,0"/>
            </Grid>

            <!-- Botón Registrar en fila inferior -->
            <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,10,0,0">
                <Button Content="📝 REGISTRAR VENTA"
                Width="180" Height="40"
                Background="#007bff"
                Foreground="White"
                FontWeight="Bold"
                FontSize="16"
                Click="BtnRegistrarVenta_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>



