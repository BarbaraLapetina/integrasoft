<UserControl x:Class="WpfApp1.Compras"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             Background="#f5f7fa">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.5*" />
            <ColumnDefinition Width="1.7*" />
        </Grid.ColumnDefinitions>

        <!-- Panel izquierdo: filtros + datagrid -->
        <StackPanel Grid.Column="0" Margin="10">

            <!-- Encabezado + botones -->
            <!-- Encabezado: Título + Botones a la derecha -->
            <Grid Margin="0 0 0 30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Título con ícono -->
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <fa:ImageAwesome Icon="ShoppingBag" Width="40" Height="30" Foreground="#2C3E50" Margin="0,0,10,5"/>
                    <TextBlock Text="HISTORIAL DE COMPRAS"
                FontSize="28"
                FontWeight="Bold"
                VerticalAlignment="Center"
                    />
                </StackPanel>

                <!-- Botones alineados al borde derecho -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0">
                    <Button Width="180" Height="40" Background="#007bff" Foreground="White" FontWeight="Bold" FontSize="16"
             BorderBrush="Transparent" Margin="0 0 10 0" Padding="10 5" Click="BtnNuevaCompraCliente_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <fa:ImageAwesome Icon="Plus" Width="16" Height="16" Margin="0,0,5,0" Foreground="White"/>
                            <TextBlock Text="NUEVA COMPRA" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Filtros -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 30">
                <TextBlock Text="Desde:" VerticalAlignment="Center" Margin="0 0 5 0" FontSize="18"/>
                <DatePicker x:Name="dpDesde" Width="196" Margin="0 0 15 0" FontSize="18"/>
                <TextBlock Text="Hasta:" VerticalAlignment="Center" Margin="0 0 5 0" FontSize="18"/>
                <DatePicker x:Name="dpHasta" Width="190" Margin="0 0 15 0" FontSize="18"/>
                <Button Margin="5 0"
         Padding="10 5"
         Width="140"
         Height="40"
         Background="#0D47A1"
         Foreground="White"
         FontWeight="Bold"
         BorderBrush="Transparent"
         FontSize="16"
         Cursor="Hand"
         Click="BtnFiltrar_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <fa:ImageAwesome Icon="Filter" Width="18" Height="18" Foreground="White" Margin="0,0,6,0"/>
                        <TextBlock Text="FILTRAR" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- DataGrid limitado en alto con Scroll -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <DataGrid x:Name="dgCompras"
                       AutoGenerateColumns="False"
                       IsReadOnly="True"
                       SelectionMode="Single"
                       SelectionChanged="dgCompras_SelectionChanged"
                       HeadersVisibility="Column"
                       MinHeight="300"
                       CanUserAddRows="False"
                       GridLinesVisibility="None"
                       RowBackground="White"
                       AlternatingRowBackground="#F9F9F9"
                       BorderThickness="0"
                       Background="White"
                       RowHeight="40"
                       FontSize="14"
                       Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding compraID}" Width="50"/>
                        <DataGridTextColumn Header="Proveedor" Binding="{Binding Proveedor}" Width="*"/>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="100"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding TotalCompra}" Width="100"/>
                        <DataGridCheckBoxColumn Header="Pagado" Binding="{Binding estaPagado}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>

        </StackPanel>

        <!-- Panel derecho: tarjeta lateral -->
        <Border Grid.Column="1"
             Margin="10,90,10,109"
             Padding="10"
             Background="#FAFAFA"
             BorderBrush="#CCC"
             BorderThickness="1"
             CornerRadius="5"
             MaxWidth="350">
            <StackPanel>
                <TextBlock Text="🧾 Detalle de la compra"
                        FontSize="18"
                        FontWeight="Bold"
                        Margin="0 0 0 10"/>

                <TextBlock Text="CAÑERO:" FontWeight="Bold" FontSize="18"/>
                <TextBlock x:Name="txtCañeroDetalle" Margin="0 0 0 8" FontSize="18"/>

                <TextBlock Text="FECHA:" FontWeight="Bold" FontSize="18"/>
                <TextBlock x:Name="txtFechaDetalle" Margin="0 0 0 8" FontSize="18"/>

                <TextBlock Text="PRODUCTOS:" FontWeight="Bold" FontSize="18"/>
                <ListBox x:Name="lstDetalleProductos"
      Height="120"
      Margin="0 0 0 8">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" Margin="0 5">
                                <TextBlock>
                 <Run Text="{Binding Producto}" FontWeight="Bold"/>
                 <Run Text=" - " />
                 <Run Text="Cantidad: " />
                 <Run Text="{Binding Cantidad}" />
                 <Run Text=", Precio: $" />
                 <Run Text="{Binding PrecioUnitario}" />
                 <Run Text=", Subtotal: $" />
                 <Run Text="{Binding Subtotal}" />
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock Text="TOTAL:" FontWeight="Bold" FontSize="18"/>
                <TextBlock x:Name="txtDetalleTotal"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="DarkGreen"
                       />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

