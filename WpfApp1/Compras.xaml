<UserControl x:Class="WpfApp1.Compras"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado con título y botones -->
        <Grid Grid.Row="0" Margin="0 0 0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Título -->
                <ColumnDefinition Width="Auto" />
                <!-- Botones -->
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">

                <!-- Título -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                    <fa:ImageAwesome Icon="ShoppingBag" Width="28" Height="28" Foreground="Black" Margin="0,0,10,0"/>
                    <TextBlock Text="GESTIÓN DE COMPRAS" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" FontFamily="Poppins"/>
                </StackPanel>
            </StackPanel>



            <!-- Botones -->
            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                <Button Height="40" Background="#007bff" Foreground="White" FontWeight="Bold"
                BorderBrush="Transparent" Margin="0 0 10 0" Padding="10 5" Click="BtnNuevaCompra_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <fa:ImageAwesome Icon="Plus" Width="16" Height="16" Margin="0,0,5,0" Foreground="White"/>
                        <TextBlock Text="NUEVA COMPRA" FontSize="14"/>
                    </StackPanel>
                    <Button.Effect>
                        <DropShadowEffect Color="#888" ShadowDepth="2" BlurRadius="4"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>


        <!-- Filtros -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" Margin="0 0 0 10">
            <TextBlock Text="Desde:" VerticalAlignment="Center" Margin="0 0 5 0" FontSize="16"/>
            <DatePicker x:Name="dpDesde" Width="188" Margin="0 0 15 0" FontSize="14"/>
            <TextBlock Text="Hasta:" VerticalAlignment="Center" Margin="0 0 5 0" FontSize="16"/>
            <DatePicker x:Name="dpHasta" Width="196" Margin="0 0 15 0" FontSize="14"/>
            <TextBlock Text="Cañero:" VerticalAlignment="Center" Margin="0 0 5 0" FontSize="16"/>
            <ComboBox x:Name="cbCañero" Width="200" Height="25" FontSize="14"  IsEditable="True" 
          IsTextSearchEnabled="True" >
                
            </ComboBox>
            <Button Height="30" Width="120" Background="#0D47A1" Foreground="White" FontWeight="Bold"
                    BorderBrush="Transparent" Padding="10 5" Margin="10 0" Click="BtnFiltrar_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <fa:ImageAwesome Icon="Filter" Width="16" Height="16" Foreground="White" Margin="0,0,5,0"/>
                    <TextBlock Text="FILTRAR" FontSize="16"/>
                </StackPanel>
                <Button.Effect>
                    <DropShadowEffect Color="#888" ShadowDepth="2" BlurRadius="4"/>
                </Button.Effect>
            </Button>
        </StackPanel>

        <!-- DataGrid Historial Mejorado -->
        <DataGrid x:Name="dgCompras"
          Grid.Row="2"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          SelectionMode="Single"
          HeadersVisibility="Column"
          CanUserAddRows="False"
          GridLinesVisibility="None"
          RowHeight="40"
          FontSize="14"
          BorderThickness="0"
          Background="White"
          RowBackground="White"
          AlternatingRowBackground="#F0F4F8"
        
          ColumnHeaderHeight="35"
          HorizontalGridLinesBrush="#E0E0E0"
          VerticalGridLinesBrush="#E0E0E0"
          Margin="0"
          >
            <DataGrid.Resources>
                <!-- Cambiar estilo del encabezado -->
                <Style TargetType="DataGridColumnHeader">

                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>

                    <Setter Property="Padding" Value="5"/>
                </Style>

                <!-- Estilo de fila al pasar mouse -->
                <Style TargetType="DataGridRow">
                    <Setter Property="Margin" Value="0,0,0,2"/>
                    <Setter Property="Padding" Value="2"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#BBDEFB"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Compra" Binding="{Binding IdCompra}" Width="*" />
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="*" />
                <DataGridTextColumn Header="Cañero" Binding="{Binding Cañero}" Width="2*" />
                <DataGridTextColumn Header="Producto" Binding="{Binding Producto}" Width="3*" />
                <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>

