<Window x:Class="WpfApp1.GastoVario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Background="#f5f7fa"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Title="Formulario Carga de Gasto Vario" Height="350" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
            <fa:ImageAwesome Icon="Plus" Width="28" Height="28" Foreground="#333" Margin="0,0,8,0"/>
            <TextBlock Text="NUEVO GASTO"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#333" />
        </StackPanel>

        <!-- Contenido -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top" Orientation="Vertical" >

            <!-- FECHA -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="FECHA:" 
                           FontWeight="SemiBold" 
                           Foreground="#555" 
                           FontSize="14" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <TextBox x:Name="txtFecha" 
                         Height="28" 
                         FontSize="14" 
                         Grid.Column="1" 
                         HorizontalAlignment="Stretch"/>
            </Grid>

            <!-- DETALLE -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="DETALLE:" 
                           FontWeight="SemiBold" 
                           Foreground="#555" 
                           FontSize="14" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <TextBox x:Name="txtDetalle" 
                         Height="28" 
                         FontSize="14" 
                         Grid.Column="1" 
                         HorizontalAlignment="Stretch"/>
            </Grid>

            <!-- MONTO -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="MONTO:" 
                           FontWeight="SemiBold" 
                           Foreground="#555" 
                           FontSize="14" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <TextBox x:Name="txtMonto" 
                         Height="28" 
                         FontSize="14" 
                         Grid.Column="1" 
                         HorizontalAlignment="Stretch"/>
            </Grid>

            <!-- Botón Agregar -->
            <Button Height="46"
                    Background="DarkBlue"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="18"
                    Margin="0,20,0,0"
                    Padding="10,0"
                    Click="BtnAgregar_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <fa:ImageAwesome Icon="PlusCircle" Width="24" Height="24" Foreground="White" Margin="0,0,8,0"/>
                    <TextBlock Text="AGREGAR"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

        </StackPanel>
    </Grid>
</Window>
