<UserControl x:Class="WpfApp1.Ventas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1.6*" />
        </Grid.ColumnDefinitions>

        <!-- Panel izquierdo -->
        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <!-- Menor margen lateral -->

            <!-- Encabezado -->
            <StackPanel Orientation="Horizontal" Margin="0 30 0 20" VerticalAlignment="Center">
                <fa:ImageAwesome Icon="ShoppingCart" Width="40" Height="30" Foreground="#2C3E50" Margin="0,0,10,5"/>
                <TextBlock Text="HISTORIAL DE VENTAS"
                           FontSize="26"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Foreground="#2C3E50"/>
            </StackPanel>

            <!-- Filtros -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Seleccione el tipo:" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                <ComboBox x:Name="cbTipoVenta" Width="200" Height="30" FontSize="16" SelectedIndex="0">
                    <ComboBoxItem Content="Ventas a clientes"/>
                    <ComboBoxItem Content="Ventas a particulares"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 10 0 20">
                <TextBlock Text="Desde:" VerticalAlignment="Center" Margin="0 0 5 0" FontSize="18"/>
                <DatePicker x:Name="dpDesde" Width="150" Margin="0 0 15 0" FontSize="18"/>
                <TextBlock Text="Hasta:" VerticalAlignment="Center" Margin="0 0 5 0" FontSize="18"/>
                <DatePicker x:Name="dpHasta" Width="150" Margin="0 0 15 0" FontSize="18"/>
                <Button Margin="5 0"
                        Padding="10 5"
                        Width="140"
                        Height="40"
                        Background="#0D47A1"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="Transparent"
                        FontSize="16"
                        Cursor="Hand"
                        Click="BtnFiltrar_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <fa:ImageAwesome Icon="Filter" Width="18" Height="18" Foreground="White" Margin="0,0,6,0"/>
                        <TextBlock Text="FILTRAR" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- DataGrid sin ancho fijo -->
            <DataGrid x:Name="dgVentas"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionChanged="dgVentas_SelectionChanged"
                      HeadersVisibility="Column"
                      Height="330"
                      CanUserAddRows="False"
                      GridLinesVisibility="None"
                      RowBackground="White"
                      AlternatingRowBackground="#F9F9F9"
                      BorderThickness="0"
                      Background="White"
                      RowHeight="40"
                      FontSize="14"
                      Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Panel derecho -->
        <StackPanel Grid.Column="1" Margin="0,40,0,0">
            <!-- Bajar la tarjeta y botones -->

            <!-- Tarjeta detalle -->
            <Border Padding="10"
                    Background="#FAFAFA"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    CornerRadius="5"
                    Margin="0 0 0 30">
                <StackPanel>
                    <TextBlock Text="🧾 Detalle de la venta"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0 0 0 10"/>

                    <TextBlock Text="CLIENTE:" FontWeight="Bold" FontSize="18"/>
                    <TextBlock x:Name="txtClienteDetalle" Margin="0 0 0 8" FontSize="16"/>

                    <TextBlock Text="FECHA:" FontWeight="Bold" FontSize="18"/>
                    <TextBlock x:Name="txtFechaDetalle" Margin="0 0 0 8" FontSize="16"/>

                    <TextBlock Text="PRODUCTOS:" FontWeight="Bold" FontSize="18"/>
                    <ListBox x:Name="lstDetalleProductos"
                             Height="120"
                             Margin="0 0 0 8"
                             >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="0 5">
                                    <TextBlock TextWrapping="Wrap">
                                        <Run Text="{Binding Producto}" FontWeight="Bold"/>
                                        <Run Text=" - Cantidad: "/>
                                        <Run Text="{Binding Cantidad}"/>
                                        <Run Text=", Precio: $"/>
                                        <Run Text="{Binding PrecioUnitario}"/>
                                        <Run Text=", Subtotal: $"/>
                                        <Run Text="{Binding Subtotal}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="TOTAL:" FontWeight="Bold" FontSize="18"/>
                    <TextBlock x:Name="txtDetalleTotal"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="DarkGreen"/>
                </StackPanel>
            </Border>

            <!-- Botones uno debajo del otro -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                <Button Height="40" Background="#007bff" Foreground="White" FontWeight="Bold"
                        BorderBrush="Transparent" Margin="0 0 0 10" Padding="10 5" Click="BtnNuevaVentaCliente_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <fa:ImageAwesome Icon="Plus" Width="16" Height="16" Margin="0,0,5,0" Foreground="White"/>
                        <TextBlock Text="VENTA CLIENTE" FontSize="16"/>
                    </StackPanel>
                </Button>

                <Button Height="40" Background="Gray" Foreground="White" FontWeight="Bold"
                        BorderBrush="Transparent" Padding="10 5" Click="BtnNuevaVentaParticular_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <fa:ImageAwesome Icon="Plus" Width="16" Height="16" Margin="0,0,5,0" Foreground="White"/>
                        <TextBlock Text="VENTA PARTICULAR" FontSize="16"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
