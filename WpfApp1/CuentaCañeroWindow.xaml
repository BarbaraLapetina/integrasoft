<Window x:Class="WpfApp1.CuentaCañeroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="Cuenta Cañero" Height="550" Width="1179"
        Background="#f0f2f5" WindowStartupLocation="CenterScreen">

 
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock x:Name="txtTitulo"
                   Grid.Row="0"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0 0 0 20"
                   TextAlignment="Center"/>

        <!-- Formulario -->
        <Border Grid.Row="1" Background="White" Padding="10" CornerRadius="10" Margin="0 0 0 20" BorderBrush="#DDD" BorderThickness="1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Fecha -->
                <StackPanel Margin="10">
                    <TextBlock Text="FECHA" FontWeight="Bold" Margin="0 0 0 5" FontSize="16"/>
                    <TextBox Name="txtFecha" Width="150" IsReadOnly="True" Background="#eee" BorderBrush="#CCC" FontSize="16"/>
                </StackPanel>
                <!-- Tipo de Bolsa -->
                <StackPanel Margin="10">
                    <TextBlock Text="TIPO DE BOLSA" FontWeight="Bold" Margin="0 0 0 5" FontSize="16"/>
                    <ComboBox Name="cbTipoBolsa" Width="120" FontSize="16"
       SelectionChanged="Campos_TextChanged">
                    </ComboBox>
                </StackPanel>
                <!-- Cantidad -->
                <StackPanel Margin="10">
                    <TextBlock Text="CANTIDAD" FontWeight="Bold" Margin="0 0 0 5" FontSize="16"/>
                    <TextBox Name="txtCantidadBolsas" Width="100" BorderBrush="#CCC" FontSize="16"
                     
                     TextChanged="Campos_TextChanged"/>
                </StackPanel>

               

                <!-- Precio por Bolsa -->
                <StackPanel Margin="10">
                    <TextBlock Text="PRECIO X BOLSA ($)" FontWeight="Bold" Margin="0 0 0 5" FontSize="16"/>
                    <TextBox Name="txtPrecioUnitario" Width="150" BorderBrush="#CCC" FontSize="16"
                   
                     TextChanged="Campos_TextChanged"/>
                </StackPanel>

                <!-- Detalle autogenerado -->
                <StackPanel Margin="10">
                    <TextBlock Text="DETALLE" FontWeight="Bold" Margin="0 0 0 5" FontSize="16"/>
                    <TextBox Name="txtDetalle" Width="250" BorderBrush="#CCC" FontSize="16" IsReadOnly="True"/>
                </StackPanel>

                <!-- Botón -->
                <Button Margin="10 25"
                Width="180"
                Height="36"
                Background="CadetBlue"
                Foreground="White"
                BorderBrush="#1f7a30"
                FontWeight="Bold"
                FontSize="16"
                Cursor="Hand"
                Click="BtnRegistrarPago_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <fa:ImageAwesome Icon="Check" Width="20" Height="20" Foreground="White" Margin="0,0,6,0"/>
                        <TextBlock Text="REGISTRAR PAGO" VerticalAlignment="Center" FontSize="16" Cursor=""/>
                    </StackPanel>
                    <Button.Effect>
                        <DropShadowEffect Color="#888" ShadowDepth="2" BlurRadius="4"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
        <!-- DataGrid -->
        <Border Grid.Row="2" Background="White" Padding="10" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
            <DataGrid x:Name="dgCuenta" AutoGenerateColumns="False" CanUserAddRows="False" AlternatingRowBackground="#f9f9f9" RowBackground="White" HeadersVisibility="Column" GridLinesVisibility="None" BorderThickness="0" ColumnHeaderHeight="35" FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="*" />
                    <DataGridTextColumn Header="Detalle" Binding="{Binding Detalle}" Width="2*" />
                    <DataGridTextColumn Header="Debe Bolsas" Binding="{Binding DebeBls}" Width="*" />
                    <DataGridTextColumn Header="Haber Bolsas" Binding="{Binding HaberBls}" Width="*" />
                    <DataGridTextColumn Header="Saldo Bolsas" Binding="{Binding SaldoBls}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
