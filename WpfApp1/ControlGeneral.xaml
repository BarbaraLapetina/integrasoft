       <UserControl x:Class="WpfApp1.ControlGeneral"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d"
             Background="#F5F6FA">


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <TextBlock Text="📊 Dashboard General"
               FontSize="22" FontWeight="Bold"
               Margin="0,0,0,20"/>

        <!-- Contenido -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0" >

            <!-- KPIs -->
            <UniformGrid Columns="4" Margin="0,0,0,20">
                <Border Background="#3498DB" CornerRadius="12" Padding="15" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Dinero en Caja" Foreground="White" FontWeight="Bold"/>
                        <TextBlock x:Name="txtCajaActual" FontSize="18" Foreground="White"/>
                    </StackPanel>
                </Border>

                <Border Background="#E74C3C" CornerRadius="12" Padding="15" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Deuda Clientes" Foreground="White" FontWeight="Bold"/>
                        <TextBlock x:Name="txtDeudaClientes" FontSize="18" Foreground="White"/>
                    </StackPanel>
                </Border>

                <Border Background="#9B59B6" CornerRadius="12" Padding="15" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Deuda Proveedores" Foreground="White" FontWeight="Bold"/>
                        <TextBlock x:Name="txtDeudaProveedores" FontSize="18" Foreground="White"/>
                    </StackPanel>
                </Border>

                <Border Background="#2ECC71" CornerRadius="12" Padding="15" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Precio Azúcar" Foreground="White" FontWeight="Bold"/>
                        <TextBlock x:Name="txtPrecioAzucar" FontSize="18" Foreground="White"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Gráfico -->
            <GroupBox Header="Evolución del Precio de Azúcar" FontWeight="Bold">
                <lvc:CartesianChart x:Name="chartAzucar" Height="250"/>
            </GroupBox>


        </StackPanel>
    </Grid>

</UserControl>
